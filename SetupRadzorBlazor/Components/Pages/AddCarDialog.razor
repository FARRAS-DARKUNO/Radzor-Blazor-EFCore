@* @page "/editCar" *@

@using SetupRadzorBlazor.Domain
@inject ICarService CarService
@inject DialogService DialogService


<CarDialog car="car" CloaseDialog="CloaseDialog" SaveCar="SaveCar" />

@code {
    public CarEntity car { get; set; } = new CarEntity();

    private async Task SaveCar()
    {
        if (car is not null)
        {
            await CarService.CreateCarAsync(car);
            DialogService.Close();

        }
    }

    private void CloaseDialog()
    {
        DialogService.Close();
    }
}
